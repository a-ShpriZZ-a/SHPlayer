<Page x:Class="SHPlayer.StartFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SHPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="500"
      Title="StartFrame">

    <Grid>
        <Rectangle x:Name="rChose" HorizontalAlignment="Center" Height="30" Margin="0,0,0,0" Stroke="#FFFF000A" VerticalAlignment="Center" Width="480" StrokeThickness="2"/>
        <Label x:Name="lChose" MouseEnter="LeftMouseEnter" MouseLeftButtonUp="lChose_MouseLeftButtonUp" MouseLeave="LeftMouseLeave" Content="Chose File..." HorizontalAlignment="Center" Height="30" Width="480" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="White" FontFamily="Roboto Light" FontSize="16"/>
    </Grid>
</Page>
